<?xml version="1.0" encoding="utf-8"?>
<com.balysv.materialripple.MaterialRippleLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ripple"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:mrl_rippleColor="@color/ripple_material_dark"
    app:mrl_rippleDelayClick="true"
    app:mrl_rippleOverlay="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:animateLayoutChanges="true"
        android:background="@drawable/selector_for_list"
        android:orientation="horizontal"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <CheckBox
            android:id="@+id/item_product_checkbox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="-7dp"
            android:layout_marginStart="-7dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:clickable="false"
            android:ellipsize="marquee"
            android:focusable="false"
            android:maxLines="1"
            android:paddingLeft="16dp"
            android:singleLine="true" />

        <LinearLayout
            android:id="@+id/item_product_layout_count"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="4dp"
            android:layout_marginStart="4dp"
            android:gravity="center_vertical"
            android:splitMotionEvents="false"
            android:visibility="gone">

            <ImageView
                android:id="@+id/item_product_image_minus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/background_for_buttons"
                android:padding="8dp"
                android:src="@drawable/ic_remove_grey600_36dp" />

            <TextView
                android:id="@+id/item_product_edit_count"
                android:layout_width="48dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:ellipsize="marquee"
                android:gravity="center"
                android:maxLines="1"
                android:singleLine="true" />

            <ImageView
                android:id="@+id/item_product_image_plus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/background_for_buttons"
                android:padding="8dp"
                android:src="@drawable/ic_add_grey600_36dp" />
        </LinearLayout>
    </LinearLayout>

</com.balysv.materialripple.MaterialRippleLayout>